{
  "model": "claude-haiku-4-5",
  "ignorePatterns": [
    "**/node_modules/**",
    "**/.git/**",
    "**/vendor/**",
    "**/tmp/**",
    "**/log/**",
    "**/.bundle/**",
    "**/coverage/**",
    "**/*.gem",
    "**/.DS_Store",
    "**/build/**",
    "**/dist/**"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  }
}
